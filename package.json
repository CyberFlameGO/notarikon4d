{
  "name": "notarikon",
  "version": "1.0.0",
  "description": "Notarikon - An interactive story-building application.",
  "main": "server/index.js",
  "author": "Jason Etcovitch",
  "license": "MIT",
  "engines": {
    "node": "7.6.0",
    "npm": "4.1.2"
  },
  "scripts": {
    "start": "nodemon --ignore app server/index.js",
    "build": "rimraf dist && cross-env NODE_ENV=production webpack --config ./config/webpack.production.config.js --progress --profile --colors",
    "lint": "eslint **/*.js",
    "serve": "node server/index.js",
    "local": "cross-env NODE_ENV=production PORT=4000 npm run serve",
    "heroku-postbuild": "npm run build"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-devshelf"
    ],
    "rules": {
      "color-named": "always-where-possible",
      "declaration-block-semicolon-newline-after": "always-multi-line",
      "declaration-block-single-line-max-declarations": 3,
      "at-rule-empty-line-before": "never"
    }
  },
  "dependencies": {
    "autoprefixer": "^6.7.0",
    "babel-core": "^6.22.1",
    "babel-loader": "^6.2.10",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-polyfill": "^6.22.0",
    "babel-preset-env": "^1.2.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-preset-react": "^6.22.0",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.22.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.17.1",
    "classnames": "^2.2.5",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "cookie-session": "^2.0.0-beta.1",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^3.1.4",
    "css-loader": "^0.26.1",
    "dotenv": "^4.0.0",
    "draft-js": "^0.10.0",
    "es6-promise": "^4.0.5",
    "express": "^4.14.1",
    "extract-text-webpack-plugin": "^1.0.1",
    "file-loader": "^0.10.1",
    "graphql": "^0.9.3",
    "html-webpack-plugin": "^2.28.0",
    "image-webpack-loader": "^3.2.0",
    "immutable": "^3.8.1",
    "moment": "^2.18.1",
    "mongoose": "^4.9.5",
    "node-sass": "^4.4.0",
    "nodemon": "^1.11.0",
    "passport": "^0.3.2",
    "passport-local": "^1.0.0",
    "postcss-loader": "^1.2.2",
    "prop-types": "^15.5.8",
    "react": "^15.5.4",
    "react-dom": "^15.5.4",
    "react-redux": "^5.0.4",
    "react-router": "^4.1.1",
    "react-router-redux": "^4.0.8",
    "react-transform-hmr": "^1.0.4",
    "redux": "^3.6.0",
    "resolve-url-loader": "^2.0.2",
    "rimraf": "^2.5.4",
    "sass-loader": "^4.1.1",
    "socket.io": "^1.7.2",
    "socket.io-client": "^1.7.2",
    "style-loader": "^0.13.1",
    "webpack": "^1.14.0",
    "webpack-dev-middleware": "^1.9.0",
    "webpack-hot-middleware": "^2.15.0"
  },
  "devDependencies": {
    "babel-eslint": "^7.1.1",
    "eslint": "^3.14.1",
    "eslint-config-airbnb": "^14.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^3.0.2",
    "eslint-plugin-react": "^6.9.0",
    "stylelint": "^7.7.1",
    "stylelint-config-devshelf": "^1.2.0",
    "stylelint-scss": "^1.4.1"
  }
}
